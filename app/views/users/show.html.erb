<div class="booyah-box">
  <div class="col-xs-4">
      <%= image_tag 'user.png' %>
  </div>
  <div class="col-xs-8">
    <h3><%= @user.email %></h3>
    <h4>Member since: <%= @user.created_at.strftime("%B %d, %Y") %></h4>
    <hr />
    <p><%= @user.comments.count %> Total Comments</p>
    <p><%= @user.comments.where(rating: '5_stars').count %> Total 5 Star Reviews</p>
  </div>
  <div class="clear"></div>
</div>

<div class="booyah-box">
  <br /><br />
  <h1 class="text-center">My Comments</h1>
  <br /><br />
    <% @user.comments.each do |comment| %>
      <div class="col-xs-12 col-sm-6">
        <h2 class="text-center"><%= link_to comment.place.name, place_path(comment.place) %></h2>
        <blockquote>
          <% if comment.humanized_rating.present? %>
              <b><%= comment.humanized_rating %></b> -
          <% end %>
          <%= comment.message %>
          <small><%= comment.user.email %></small>
          <%= link_to 'Delete',place_path(comment), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-warning'%>
        </blockquote>
      </div>
    <% end %>

  <div class="clear"></div>
  </div>
